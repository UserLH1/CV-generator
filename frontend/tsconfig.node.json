{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",                   // Use CommonJS for Node
    "lib": ["es2020"],
    "types": ["node"],                      // Node-specific types
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["scripts", "server"],         // Adjust to include Node-specific directories
  "exclude": ["node_modules", "dist"]
}
